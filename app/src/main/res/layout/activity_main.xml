<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bck"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            android:contentDescription="@string/logo_dec"
            android:paddingTop="8dp"
            android:paddingBottom="14dp"
            app:srcCompat="@drawable/dicee_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDice1"
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_weight="3"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_dec"
                android:cropToPadding="true"
                android:paddingBottom="8dp"
                android:scrollbarSize="2dp"
                app:srcCompat="@drawable/dice1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/textview_dec"
                android:gravity="center|center_horizontal"
                android:shadowColor="@color/white"
                android:text="Computer"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textColorHighlight="#D53737"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="visible"
                app:autoSizeMaxTextSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDice2"
                android:layout_width="80dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_dec"
                android:cropToPadding="true"
                android:paddingTop="8dp"
                android:scrollbarSize="2dp"
                app:srcCompat="@drawable/dice2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="15dp"
                android:layout_height="66dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/textview_dec"
                android:gravity="center|center_horizontal"
                android:text="User"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textIsSelectable="false"
                android:textSize="20dp"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHigher"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:contentDescription="@string/button_dec"
                android:text="Higher"
                android:visibility="visible"
                app:backgroundTint="#9A1010"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnLower"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:contentDescription="@string/button_dec"
                android:text="Lower"
                app:backgroundTint="#9A1010" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtWinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:contentDescription="@string/textview_dec"
                android:gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textColorHighlight="#BF360C"
                android:textSize="2sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>